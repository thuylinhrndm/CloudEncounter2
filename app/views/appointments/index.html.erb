<div class="row">
<div class="small-12 columns">
  <div class="form-style-9">
    <h1 style="text-align: center">Listing appointments</h1>
    <table class="table table-striped">
      <thead>
          <tr>
            <th>Name</th>
            <th>Email</th>
            <th>Day</th>
            <th>Time</th>
            
          </tr>
      </thead>

        <tbody>
          <% @appointments.each do |appointment| %>
          <tr>
          <td><%= appointment.user.name %></td>
          <td><%= appointment.email %>
         
              <% if Rails.env.development? %>
              <p><%= button_to 'Send Reminder', reminder_path(user_id: current_user.id,time:(appointment.time).strftime("%H:%M")) %></p>
                <% end %>
          </td>
          <td><%= appointment.time.strftime("%d %b %y") %></td>
          <td><%= appointment.time.strftime("%H:%M") %></td>
          <td><%= link_to 'Show', appointment %> | <%= link_to 'Edit', edit_appointment_path(appointment) %>|<%= button_to 'Destroy', appointment, method: :delete, class: 'small button round', data: { confirm: 'Are you sure?'} %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
        </br>
        <%= link_to 'New Appointment', new_appointment_path %>
  

       

      
 </div>
