<h1>Contact a Consultant</h1>

<%= form_tag(controller: 'contact', action: 'send_email') do %>
	<%= label_tag(:message) %>
	<%= text_area_tag(:message) %>
	<%= hidden_field_tag(:email, @consultant_email)%>
	<%= hidden_field_tag(:user_name, @user_email)%>
	<%= submit_tag "Send email", class: 'small button round' %>
<% end %>

