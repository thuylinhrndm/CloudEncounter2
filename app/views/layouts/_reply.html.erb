<div class="large-12 columns">
<h4>Write a Reply</h4>
<% if current_user %>
<%= form_for(@answer) do |f| %>
  
	 <div class="field">
	    <%= f.text_area :description, rows: 3 %>
	 </div>
	 <div class="field">
	    <%= f.hidden_field :user_id, value: current_user.id %>
	 </div>
	 <div class=”field”>
		<%= f.hidden_field :post_id, value: post.id %>
	 </div>

	 <div class=”field”>
	    <%= f.submit "Post Reply", class: "small button round" %>
	 </div>

<% end %>
<% end %>
</div>