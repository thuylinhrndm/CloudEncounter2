
    <div class="row">
      <div class="large-12 columns">
        <p><strong><%= post.title %></strong></p>
        <p><%= post.created_at.strftime("%e %b %Y") %> </p>

        <% if current_user%>
         <% unless (current_user.role == 'user' && controller.action_name == 'index') %>
          <% if post.user.nil? %>
            <%= "No User" %>
          <% else %>
            <%= post.user.name %>
          <% end %>
        <% end %>
        <% end %>

        </p> 
        <p> <%= post.description %></p>
        <% if current_user %>
        <% unless (current_user.role == 'user' && controller.action_name == 'index') %>
        <ul class="inline-list">
         <li>
         <div id="reply_link">
             <%= link_to new_answer_path, remote: true, method: :get do %>
             <button class="small button round">Reply Button</button>
             <% end %>
             </div>    
          </li>
          <% unless current_user.role == 'consultant' %>
          <li>
            <%= link_to 'Edit', edit_post_path(post) %>    
          </li>
         
          <li>
          <%= button_to 'Destroy', post, method: :delete, class: "button small round" %>
          </li>
        <% end %>
        </ul>
        <% end %>
        <% end %>
        <div id="reply_box">
        <%= render partial: 'layouts/reply', locals: {post: post}%>
        </div>
        <% if post.answers.any? %>
        <h4><%= post.answers.count %> Answers</h4>
        <% post.answers.each do |answer| %>
          <div class="row">
            <div class="large-2 columns small-3">
            <img src="http://placehold.it/50x50&text=[img]"/>
            </div>  
            <div class="large-10 columns">
            <p>
              <%= answer.description %>
            </p>
          </div>
          </div>
          <br />
          <% end %>
          <% end %>
     
    <hr/>
    
  </div>
  



